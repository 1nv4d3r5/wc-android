<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.wheaton.app"
      android:versionCode="13"
      android:versionName="2011-08-16">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8" />
    <uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	
    <application android:icon="@drawable/icon" android:label="@string/app_name" >
    	<uses-library android:name="com.google.android.maps" />

        <activity android:name=".MainScreen"
                  android:label="@string/app_name" >
                  <intent-filter>
        			<action android:name="android.intent.action.MAIN" />
            	    <category android:name="android.intent.category.LAUNCHER" />
            	</intent-filter>
        </activity>
        <activity android:name=".WhosWhoSearch"
        	android:label="@string/app_name"
        	android:configChanges="orientation" />
        <activity android:name=".WhosWhoResults"
        	android:label="@string/app_name"
        	android:configChanges="orientation" />
        <activity android:name=".BonAppMenu"
        	android:label="@string/app_name"
        	android:configChanges="orientation" />
        <activity android:name=".OpenFloor"
        	android:label="@string/app_name"
        	android:configChanges="orientation" />
        <activity android:name=".MapScreen" 
        	android:label="@string/app_name"
        	android:configChanges="orientation"
        	android:theme="@android:style/Theme.NoTitleBar" />
       	<activity android:name=".Links"
       		android:label="@string/app_name"
       		android:configChanges="orientation" />
       	<activity android:name=".About"
       		android:label="@string/about_title"
       		android:configChanges="orientation"
       		android:theme="@android:style/Theme.Dialog" />
       	<activity android:name=".ChapelSchedule"
       		android:label="@string/app_name"
       		android:configChanges="orientation" />
      
		<activity android:name="com.google.ads.AdActivity"
        	      android:configChanges="keyboard|keyboardHidden|orientation"/>
        


</application>

</manifest> 