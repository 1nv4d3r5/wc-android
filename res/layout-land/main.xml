<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:background="@android:color/white" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginBottom="26dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="26dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/whos_who"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="13dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/stalkernet_square"
                android:contentDescription="@string/whos_who_button" />

            <ImageView
                android:id="@+id/chapel"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/chapel"
                android:contentDescription="@string/chapel_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginBottom="26dp"            
            android:layout_marginTop="26dp"
            android:layout_marginLeft="13dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/open_floor"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="13dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/open_floor"
                android:contentDescription="@string/open_floor_button" />

            <ImageView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/menu"
                android:contentDescription="@string/menu_button" />
        </LinearLayout>

        <ImageView
            android:id="@+id/about"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="26dp"
            android:layout_marginLeft="13dp"
            android:adjustViewBounds="true"
            android:src="@drawable/about_vertical"
            android:contentDescription="@string/about_button" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="26dp"
            android:layout_marginLeft="13dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/map"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="13dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/map"
                android:contentDescription="@string/map_button" />

            <ImageView
                android:id="@+id/links"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/links"
                android:contentDescription="@string/links_button" />
        </LinearLayout>
    </LinearLayout>

</HorizontalScrollView>