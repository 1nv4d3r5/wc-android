<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">

	<Button
		android:id="@+id/leftButton"
		android:text="@string/prev_button"
		android:layout_alignParentLeft="true"
		android:layout_height="50dip"
		android:layout_width="100dip" />
	<Button
		android:id="@+id/rightButton"
		android:text="@string/next_button"
		android:layout_alignParentRight="true"
		android:layout_height="50dip"
		android:layout_width="100dip" />
	<Button
		android:id="@+id/todayButton"
		android:text="@string/today_button"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_toRightOf="@id/leftButton"
		android:layout_toLeftOf="@id/rightButton"
		android:layout_height="50dip"
		android:layout_width="fill_parent" />
		
	<ImageView
		android:id="@+id/chapelHeader"
		android:layout_width="fill_parent"
		android:layout_height="75dip"
		android:layout_below="@id/todayButton"
		android:background="@drawable/chapel_header" />

<com.google.ads.AdView
		android:id="@+id/ad"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		ads:adUnitId="a14d2a372c31403"
		ads:adSize="BANNER"
        ads:loadAdOnCreate="true"
		/>
	<ViewAnimator
		android:id="@+id/view_area"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@id/chapelHeader"
		android:layout_above="@id/ad"
		android:inAnimation="@android:anim/fade_in"
		android:outAnimation="@android:anim/fade_out">
	</ViewAnimator>
	
</RelativeLayout>
