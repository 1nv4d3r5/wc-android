<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<ImageView 
	android:id="@+id/menu"
	android:layout_width="100dip"
	android:layout_height="100dip"
	android:layout_alignParentTop="true"
	android:layout_centerHorizontal="true"
	android:background="@drawable/menu"
	/>

<ImageView 
	android:id="@+id/stalkernet"
	android:layout_width="fill_parent"
	android:layout_height="100dip"
	android:layout_alignParentTop="true"
	android:layout_alignParentLeft="true"
	android:layout_toLeftOf="@id/menu"
	android:background="@drawable/stalkernet_square"
	/>
	
<ImageView 
	android:id="@+id/openFloors"
	android:layout_width="fill_parent"
	android:layout_height="100dip"
	android:layout_alignParentTop="true"
	android:layout_alignParentRight="true"
	android:layout_toRightOf="@id/menu"
	android:background="@drawable/open_floors"
	/>

<ImageView 
	android:id="@+id/links"
	android:layout_width="100dip"
	android:layout_height="100dip"
	android:layout_below="@id/menu"
	android:layout_centerHorizontal="true"
	android:background="@drawable/about"
	/>

<ImageView 
	android:id="@+id/map"
	android:layout_width="fill_parent"
	android:layout_height="100dip"
	android:layout_below="@id/stalkernet"
	android:layout_alignParentLeft="true"
	android:layout_toLeftOf="@id/links"
	android:background="@drawable/about"
	/>
	
<ImageView 
	android:id="@+id/about"
	android:layout_width="fill_parent"
	android:layout_height="100dip"
	android:layout_below="@id/menu"
	android:layout_toRightOf="@id/links"
	android:layout_alignParentRight="true"
	android:background="@drawable/about"
	/>
	
</RelativeLayout>
